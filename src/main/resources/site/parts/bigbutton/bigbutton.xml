<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Big Button Component</display-name>
    <description>Button for the initial landingpage</description>
    <form>
        <input name="buttonstyle" type="TextLine">
            <label>Button style, primary or secondary</label>
            <occurrences minimum="1" maximum="1"/>
            <default>primary</default>
        </input>
        <input name="text" type="TextLine">
            <label>Button text</label>
            <occurrences minimum="1" maximum="1"/>
            <default>Click me</default>
        </input>
        <input name="link" type="TextLine">
            <label>Link</label>
            <occurrences minimum="1" maximum="1"/>
            <default>#</default>
        </input>
    </form>
</part>