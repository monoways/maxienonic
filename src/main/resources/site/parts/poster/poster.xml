<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Poster</display-name>
    <description>Plakat av tilgjengelig materiale</description>
    <form>
        <input name="title" type="TextLine">
            <label>Title</label>
            <occurrences minimum="1" maximum="1"/>
            <default>My title</default>
        </input>
        <input name="text" type="TextLine">
            <label>text</label>
            <occurrences minimum="1" maximum="1"/>
            <default>Lorem ipsum dolor sit amnet</default>
        </input>
        <input name="image" type="ImageSelector">
            <label>Image</label>
            <occurrences minimum="1" maximum="1"/>
            <config></config>
        </input>
        <input name="pdf" type="AttachmentUploader">
            <label>PDF</label>
            <occurrences minimum="1" maximum="1"/>
            <config></config>
        </input>
        <!-- have download button or not -->
        <input name="download" type="CheckBox">
            <label>Download</label>
            <occurrences minimum="1" maximum="1"/>
            <default>true</default>
        </input>
    </form>
</part>